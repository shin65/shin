<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/bt_edit_back"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/arrow_left"
                android:layout_gravity="left"/>
            <TextView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:gravity="right|center_vertical"
                android:text="다음"
                android:textSize="18sp"
                android:textColor="@color/green_2cc68f"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:gravity="center">
            <FrameLayout
                android:id="@+id/bt_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imageView"
                    android:layout_width="78dp"
                    android:layout_height="78dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_empty_profile"/>
                <FrameLayout
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:background="@drawable/circle_white_green_2cc68f_border"
                    android:layout_gravity="bottom|right">
                    <ImageView
                        android:layout_width="23dp"
                        android:layout_height="19dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_edit"/>
                </FrameLayout>

            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="45dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="프로필 사진과 닉네임을 입력해주세요"
                android:layout_marginLeft="15dp"
                android:textStyle="bold"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_stroke">

                <EditText
                    android:id="@+id/bt_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:background="@null"
                    android:hint="닉네임"
                    android:inputType="text" />
            </FrameLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="* 사용 가능한 별명입니다"
                android:textStyle="bold"
                android:textColor="@color/green_2cc68f"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>

        <TextView
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="학부모 이메일"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="50dp"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="10dp"
            >
            <EditText
                android:visibility="gone"
                android:id="@+id/bt_email"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/white_square_gray_e0e0e0_box"
                android:paddingLeft="15dp"
                android:hint="abcd@naver.com"/>
            <TextView
                android:visibility="gone"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:text="수정"
                android:layout_marginRight="15dp"
                android:textSize="18sp"
                android:inputType="text"
                android:layout_gravity="right|center_vertical"
                android:background="@drawable/button_stroke"
                android:gravity="center"/>

        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/bt_complete"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="#47c83e"
                android:gravity="center"
                android:text="완료"
                android:textColor="#ffffff"
                android:layout_marginBottom="50dp"
                />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>